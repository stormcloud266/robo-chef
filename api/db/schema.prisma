datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id     String  @id @default(cuid())
  authId String  @unique
  email  String? @unique

  posts Post[]
}

model Post {
  id String @id @default(cuid())

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  body        String
  ingredients String[]
  preparation String[]
  prepTime    Int
  cookTime    Int
  rating      Int
}
